from scipy.interpolate import griddata
import numpy as np
import matplotlib.pyplot as plt

samples = np.load('coords.npy')
band_powers = np.load('band_powers.npy',allow_pickle=True).item()

print(band_powers.keys())  # 查看可用的频带名称

x = samples[:, 0]
y = samples[:, 1]
z = samples[:, 2]
values = band_powers['Delta']  # 使用 Delta 频带的数据进行插值

# 创建规则网格，选择分辨率（1000j）
grid_x, grid_y = np.mgrid[min(x):max(x):1000j, min(y):max(y):1000j]

# 使用 cubic 插值进行插值
grid_values = griddata((x, y), values, (grid_x, grid_y), method='cubic')

# 可视化插值结果（Z 平面）
# plt.figure(figsize=(10，8))  # 改变图像的大小
plt.imshow(grid_values, extent=(min(x), max(x), min(y), max(y)), origin='lower', cmap='turbo')
plt.colorbar(label='Delta Band Power')
plt.title('Cubic Spline Interpolation of Delta Band Power')
plt.xlabel('X Coordinate')
plt.ylabel('Y Coordinate')
plt.axis('equal')  # 确保轴比例相等
plt.show()
